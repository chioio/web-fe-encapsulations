{
  "compilerOptions": {
    "baseUrl": ".",
    "sourceMap": false,
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "node",
    "allowJs": true,
    "strict": true,
    "noImplicitAny": false,
    "noUnusedLocals": true,
    "removeComments": false,
    "types": ["node"],
    "lib": ["esnext"]
  },
  "include": ["packages"],
  "exclude": ["node_modules"]
}
